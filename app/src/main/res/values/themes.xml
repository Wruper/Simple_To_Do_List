<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleToDoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/denim</item>
        <item name="tint">@color/bamboo</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorPrimaryVariant">@color/denim</item>
        <item name="colorOnPrimary">@color/bamboo</item>
        <item name="android:textColorSecondary">@color/denim</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/denim</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/denim</item>
        <!-- Customize your theme here. -->
        <!--Time picker nomaina uz -->
        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>

        <item name="android:navigationBarColor">@color/denim</item>

    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>